<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" 
    android:background="@drawable/bg_bumper">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right|center" 
        android:layout_marginTop="30dp">

        <ImageView
            android:id="@+id/imgfalse"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
              android:layout_marginRight="10dp"
            
            android:src="@drawable/ic_false" />

        <ImageView
            android:id="@+id/imgtrue"
            android:layout_width="63dp"
            android:layout_height="63dp"
            android:layout_alignParentTop="true"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/imgfalse"
            android:src="@drawable/ic_true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center" >

        <ImageView
            android:id="@+id/pic1"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="0dp"
            android:layout_marginTop="0dp"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/pic2"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignLeft="@+id/pic1"
            android:layout_below="@+id/pic1"
            android:layout_marginTop="30dp"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/pic3"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_above="@+id/pic2"
            android:layout_marginLeft="30dp"
            android:layout_toRightOf="@+id/pic1"
            android:src="@drawable/ic_launcher" />

        <ImageView
            android:id="@+id/pic4"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_alignLeft="@+id/pic3"
            android:layout_alignTop="@+id/pic2"
            android:src="@drawable/ic_launcher" />
    </RelativeLayout>

</LinearLayout>
